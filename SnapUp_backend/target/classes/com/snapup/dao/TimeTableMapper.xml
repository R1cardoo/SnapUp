<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.snapup.dao.TimeTableMapper">
    <select id="findTimeTableByCode" resultType="TimeTable">
        select * from snapup.time_table
        where station_code = #{station_code}
    </select>

    <select id="findTimeTableByTrainRun" resultType="TimeTable">
        select * from snapup.time_table
        where num_code = #{num_code}
    </select>

    <select id="findTimeTable" resultType="TimeTable">
        select * from snapup.time_table
        where num_code = #{num_code} and station_code = #{station_code}
    </select>

    <select id="findTimeTableByDepartTime" resultType="TimeTable">
        select * from snapup.time_table
        where departure_time = #{depart_time}
    </select>

    <select id="findTimeTableByArriveTime" resultType="TimeTable">
        select * from snapup.time_table
        where arrival_time = #{arrive_time}
    </select>

    <delete id="delLine" parameterType="java.lang.String">
        delete from snapup.time_table
        where num_code = #{num_code}
    </delete>

    <insert id="createTimeTable">
        insert into snapup.time_table(num_code, station_code, departure_time, arrival_time)
        values(#{num_code}, #{station_code}, #{departure_time}, #{arrival_time})
    </insert>
</mapper>